{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ESNext",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "NodeNext",
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowJs": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
